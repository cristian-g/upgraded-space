{% macro userLogin(loginId, password, buttonText) %}
    <form action="/login" method="post" id="loginForm" enctype="multipart/form-data">
        <div class="form-group">
            <label for="loginId">Nombre de usuario o correo</label>
            <input type="text" class="form-control" name="loginId" id="loginId" placeholder="Introduce el nombre de usuario o correo" value="{{ username|default('') }}" required>
            <div class="invalid-feedback">
                <strong>Introduce un nombre de usuario o correo:</strong>
            </div>
            <small id="usernameHelpBlock" class="form-text text-muted">
                Puedes utilizar tu correo o tu nombre de usuario
            </small>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" onchange="checkForm(this.name, this.value)" class="form-control" name="password" id="password" placeholder="Introduce una contraseña" value="{{ password|default('') }}" required pattern="^(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{6,12}$" aria-describedby="passwordHelpInline">
            <div id="feedback-password" class="invalid-feedback">
                <strong>Introduce una contraseña con el formato indicado:</strong>
            </div>
            <small id="passwordHelpBlock" class="form-text text-muted">
                La contraseña debe tener una longitud de entre 6 y 12 caracteres y debe contener al menos un número y una letra mayúscula.
            </small>
        </div>
        <input type="button" class="btn btn-primary" value="{{ buttonText|default('Iniciar sesión') }}" id="loginSubmit">
    </form>
{% endmacro %}